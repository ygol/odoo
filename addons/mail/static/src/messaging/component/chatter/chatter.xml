<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.messaging.component.Chatter" owl="1">
        <div class="o_Chatter">
            <t t-if="true">
                <ChatterTopbar
                    class="o_Chatter_topbar"
                    chatterLocalId="props.chatterLocalId"
                />
                <t t-if="chatter.hasThread and storeProps.thread and storeProps.thread.composerLocalId and chatter.isComposerVisible">
                    <Composer
                        class="o_Chatter_composer"
                        composerLocalId="storeProps.thread.composerLocalId"
                        hasTextInputSendOnEnterEnabled="false"
                        isCompact="false"
                        isExpandable="true"
                        isLog="chatter.isComposerLog"
                        t-on-o-message-posted="_onComposerMessagePosted"
                        t-ref="composer"
                    />
                </t>
                <t t-if="chatter.isAttachmentBoxVisible">
                    <AttachmentBox
                        class="o_Chatter_attachmentBox"
                        threadLocalId="chatter.threadLocalId"
                    />
                </t>
                <t t-if="storeProps.thread">
                    <t t-if="chatter.hasActivities and chatter.activityLocalIds and chatter.activityLocalIds.length > 0">
                        <ActivityBox
                            class="o_Chatter_activityBox"
                            chatterLocalId="chatter.localId"
                        />
                    </t>
                    <t t-if="chatter.hasThread">
                        <ThreadViewer
                            class="o_Chatter_thread"
                            hasComposer="false"
                            haveMessagesAuthorRedirect="true"
                            order="'desc'"
                            threadLocalId="storeProps.thread.localId"
                            t-ref="thread"
                        />
                    </t>
                </t>
            </t>
        </div>
    </t>

</templates>
