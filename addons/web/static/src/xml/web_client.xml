<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="web.WebClient" owl="1">
        <body class="o_web_client" t-att-class="getBodyClass()"
              t-on-push-state="_onPushState"
              t-on-set-title-part="_onSetTitlePart"
              t-on-warning="_onDisplayWarning"
              t-on-breadcrumb-clicked.stop="_onBreadcrumbClicked"
              t-on-execute-action.stop="_onExecuteAction"
              t-on-open-menu="_onOpenMenu">
            <Menu t-if="!actionManager.isFullScreen" t-ref="menu"
                menus="menus"
                menuID="menuID"/>
            <ComponentAdapter Component="LoadingWidget" widgetArgs="[]"/>

            <t t-set="actionKeys" t-value="actionManager.actionKeys" />
            <ActionContainer
                  t-if="actionKeys.main"
                  t-key="actionKeys.main"
                  t-ref="mainRef"
            />
            <!-- DialogActionContainer ????? -->
            <ActionContainer 
                t-if="actionKeys.dialog"
                t-key="actionKeys.dialog"
                dialog="true"
            />
            <div class="o_dialogs"/>
        </body>
    </t>

</templates>