<?xml version="1.0" encoding="utf-8"?>
<templates>
    <div t-name="web.GraphRenderer" class="o_graph_renderer" owl="1">
        <label t-if="props.title"><t t-esc="props.title"/></label>
    </div>

    <div t-name="GraphRenderer.CustomTooltip" class="o_graph_custom_tooltip" owl="1">
        <table>
            <thead>
                <tr>
                    <th class="o_measure"><t t-esc="measure"/></th>
                </tr>
            </thead>
            <tbody>
                <tr t-foreach="tooltipItems" t-as="tooltipItem">
                    <td>
                        <span class="o_square" t-att-style="'background-color: ' + tooltipItem.boxColor"/>
                        <span class="o_label" t-att-style="'max-width: ' + maxWidth"> <t t-esc="tooltipItem.label" /> </span>
                    </td>
                    <td class="o_value">
                        <t t-esc="tooltipItem.value"/>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <t t-name="GraphRenderer.MainContent" owl="1">
        <t t-if="noContentHelperData" t-call="web.NoContentHelper">
            <t t-set="title" t-value="noContentHelperData.title"/>
            <t t-set="description" t-value="noContentHelperData.description"/>
        </t>
        <div t-else="" class="o_graph_canvas_container">
            <canvas/>
        </div>
    </t>

</templates>
